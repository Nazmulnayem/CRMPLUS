<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] PTL ERP Login</title>

    <link rel="apple-touch-icon" sizes="180x180" href="~/image/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/image/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/image/favicon-16x16.png">
    <link rel="manifest" href="~/image/site.webmanifest">

    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/content/custom.css" rel="stylesheet" />
    <link href="~/content/asitcommonstyle.css" rel="stylesheet" />
    <link href="~/content/asitnoneresponsive.css" rel="stylesheet" />
    <link href="~/content/bdaccstyle.css" rel="stylesheet" />
    <link href="~/content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/content/chosen.css" rel="stylesheet" />
    <link href="~/content/appsstyle.css" rel="stylesheet" />
    <script src="~/scripts/jquery-2.1.3.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/chosen.jquery.js"></script>
    <link href="~/content/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/content/sweetalert/sweetalert2.min.js"></script>
    <link href="~/css/login.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/busy-load@0.1.2/dist/app.min.js"></script>
    <script asp-append-version="true" type="text/javascript">
        $(document).ready(function () {
            $.busyLoadSetup({ animation: "slide", background: "rgba(215, 219, 221, 0.9)" });

        });        
        function ShowLoader() {
            $.busyLoadFull("show", {
                text: "LOADING ..."
            });
        }
        function HideLoader() {
            $.busyLoadFull("hide");
        }
        $(document).ajaxStart(function () {
            alert("1");
            ShowLoader();
        });

        $(document).ajaxStop(function () {
            HideLoader();
        });
    </script>
    @if (ViewBag.JavascriptFunction != null)
    {
        <script type="text/javascript">
            @Html.Raw(ViewBag.JavascriptFunction)
        </script>

    }
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
