@model PTL.Entity.Auth.EClassCompany
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container form-container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="page-heading mb-3">
                <div class="container-fluid">
                    <div class="row d-flex align-items-center">
                        <div class="col-md-6">
                            <div class="page-header-text text-primary">
                                <h3>Company Information</h3>
                            </div>
                        </div>
                    </div>
                    <hr style="border-color: #0275d8;">
                </div>
            </div>

            <form id="compInfoForm" method="post" asp-action="CompIndex" asp-controller="Comp" asp-area="ControlPanel">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="companyShortName" class="form-label">Company Short Name</label>
                        <input type="text" class="form-control" id="companyShortName" asp-for="comsnam" value="@Model.comsnam" placeholder="Enter company short name">
                        <span asp-validation-for="comsnam" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="companyName" class="form-label">Company Name</label>
                        <input type="text" class="form-control" id="companyName" asp-for="comnam" value="@Model.comnam" placeholder="Enter company name">
                        <span asp-validation-for="comnam" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" asp-for="comadd1" value="@Model.comadd1" placeholder="Enter address">
                        <span asp-validation-for="comadd1" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="phone" asp-for="comadd2" value="@Model.comadd2" placeholder="Enter phone number">
                        <span asp-validation-for="comadd2" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="website" class="form-label">Website</label>
                        <input type="text" class="form-control" id="website" asp-for="comadd3" value="@Model.comadd3" placeholder="Enter website URL">
                        <span asp-validation-for="comadd3" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" onclick="UpdateCompanyInfo()">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
